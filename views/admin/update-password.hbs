<div class="p-8 bg-white rounded-lg">
  <form method="POST" action="/admin/update-password" class="flex flex-col space-y-8 max-w-screen-sm">
    <input type="hidden" name="csrfToken" value="{{csrfToken}}" />
    <div class="flex flex-col space-y-2">
      <label for="current_password" class="text-sm text-gray-500">Current Password</label>
      <input type="password" name="currentPassword" id="current_password" value="{{oldValues.currentPassword}}"
        class="w-full rounded-md py-2.5 px-4 border text-sm outline-skin-primary {{#if fieldErrors.currentPassword}}border-red-500{{/if}}"
        autocomplete="off">
      {{#if fieldErrors.currentPassword}}
      {{#each fieldErrors.currentPassword}}
      <p class="text-sm text-red-500">{{this}}</p>
      {{/each}}
      {{/if}}
    </div>
    <div class="flex flex-col space-y-2">
      <label for="new_password" class="text-sm text-gray-500">New Password</label>
      <input type="password" name="newPassword" id="new_password" value="{{oldValues.newPassword}}"
        class="w-full rounded-md py-2.5 px-4 border text-sm outline-skin-primary {{#if fieldErrors.newPassword}}border-red-500{{/if}}"
        autocomplete="off">
      {{#if fieldErrors.newPassword}}
      {{#each fieldErrors.newPassword}}
      <p class="text-sm text-red-500">{{this}}</p>
      {{/each}}
      {{/if}}
    </div>
    <div class="flex flex-col space-y-2">
      <label for="confirm_password" class="text-sm text-gray-500">Confirm Password</label>
      <input type="password" name="confirmPassword" id="confirm_password" value="{{oldValues.confirmPassword}}"
        class="w-full rounded-md py-2.5 px-4 border text-sm outline-skin-primary {{#if fieldErrors.confirmPassword}}border-red-500{{/if}}"
        autocomplete="off">
      {{#if fieldErrors.confirmPassword}}
      {{#each fieldErrors.confirmPassword}}
      <p class="text-sm text-red-500">{{this}}</p>
      {{/each}}
      {{/if}}
    </div>
    <div class="flex justify-end">
      <button
        class='inline-flex items-center px-4 py-2 bg-skin-primary border border-transparent rounded-md font-semibold text-xs text-white uppercase tracking-widest hover:bg-skin-primary/80 focus:bg-skin-primary/80 active:bg-skin-primary/80 focus:outline-none focus:ring-2 focus:ring-skin-primary focus:ring-offset-2 transition ease-in-out duration-150'>
        SAVE
      </button>
    </div>
  </form>
</div>