<div class='text-gray-900'>
  <div class='min-h-screen flex flex-col sm:justify-center items-center pt-6 sm:pt-0'>
    <div>
      <a href='/'>
        <h2 class='font-bold text-3xl'>LOGO</h2>
      </a>
    </div>

    <div class='w-full sm:max-w-md mt-6 px-6 py-4 bg-white shadow-md overflow-hidden sm:rounded-lg'>
      <form method='POST' action='/auth/register'>
        <input type="hidden" name="csrfToken" value="{{csrfToken}}" />

        <div class='py-6'>
          <center>
            <span class='text-2xl font-semibold'>Register</span>
          </center>
        </div>

        <div>
          <label class='block font-medium text-sm text-gray-700' for='fullName' value='Full Name' />
          <input name='fullName' placeholder='Full name' value='{{oldValues.fullName}}'
            class='w-full rounded-md py-2.5 px-4 border text-sm outline-skin-primary {{#if fieldErrors.fullName}}border-red-500{{/if}}' />
          {{#if fieldErrors.fullName}}
          {{#each fieldErrors.fullName}}
          <p class="text-sm text-red-500">{{this}}</p>
          {{/each}}
          {{/if}}
        </div>

        <div class='mt-4'>
          <label class='block font-medium text-sm text-gray-700' for='email' value='Email' />
          <input type='email' name='email' placeholder='Email' value='{{oldValues.email}}'
            class='w-full rounded-md py-2.5 px-4 border text-sm outline-skin-primary {{#if fieldErrors.email}}border-red-500{{/if}}' />
          {{#if fieldErrors.email}}
          {{#each fieldErrors.email}}
          <p class="text-sm text-red-500">{{this}}</p>
          {{/each}}
          {{/if}}
        </div>

        <div class='mt-4'>
          <label class='block font-medium text-sm text-gray-700' for='password' value='Password' />
          <div class='relative'>
            <input id='password' type='password' name='password' placeholder='Password' value='{{oldValues.password}}'
              class='w-full rounded-md py-2.5 px-4 border text-sm outline-skin-primary {{#if fieldErrors.password}}border-red-500{{/if}}' />
            <div class='absolute inset-y-0 right-0 pr-3 flex items-center text-sm leading-5'>
              <button type='button' id="show_password_btn"
                class='text-gray-500 focus:outline-none focus:text-gray-600 hover:text-gray-600'>
                <svg xmlns='http://www.w3.org/2000/svg' class='w-6 h-6' viewBox='0 0 24 24'
                  style='fill: rgba(0, 0, 0, 1);transform: ;msFilter:;'>
                  <path
                    d='M12 4.998c-1.836 0-3.356.389-4.617.971L3.707 2.293 2.293 3.707l3.315 3.316c-2.613 1.952-3.543 4.618-3.557 4.66l-.105.316.105.316C2.073 12.382 4.367 19 12 19c1.835 0 3.354-.389 4.615-.971l3.678 3.678 1.414-1.414-3.317-3.317c2.614-1.952 3.545-4.618 3.559-4.66l.105-.316-.105-.316c-.022-.068-2.316-6.686-9.949-6.686zM4.074 12c.103-.236.274-.586.521-.989l5.867 5.867C6.249 16.23 4.523 13.035 4.074 12zm9.247 4.907-7.48-7.481a8.138 8.138 0 0 1 1.188-.982l8.055 8.054a8.835 8.835 0 0 1-1.763.409zm3.648-1.352-1.541-1.541c.354-.596.572-1.28.572-2.015 0-.474-.099-.924-.255-1.349A.983.983 0 0 1 15 11a1 1 0 0 1-1-1c0-.439.288-.802.682-.936A3.97 3.97 0 0 0 12 7.999c-.735 0-1.419.218-2.015.572l-1.07-1.07A9.292 9.292 0 0 1 12 6.998c5.351 0 7.425 3.847 7.926 5a8.573 8.573 0 0 1-2.957 3.557z'>
                  </path>
                </svg>
              </button>
            </div>
          </div>
          {{#if fieldErrors.password}}
          {{#each fieldErrors.password}}
          <p class="text-sm text-red-500">{{this}}</p>
          {{/each}}
          {{/if}}
        </div>

        <div class='mt-4'>
          <label class='block font-medium text-sm text-gray-700' for='confirm_password' value='Confirm Password' />
          <div class='relative'>
            <input id='confirm_password' type='password' name='confirmPassword' placeholder='Enter password again'
              value='{{oldValues.confirmPassword}}'
              class='w-full rounded-md py-2.5 px-4 border text-sm outline-skin-primary {{#if fieldErrors.confirmPassword}}border-red-500{{/if}}' />
            <div class='absolute inset-y-0 right-0 pr-3 flex items-center text-sm leading-5'>
              <button type='button' id="show_confirm_password_btn"
                class='text-gray-500 focus:outline-none focus:text-gray-600 hover:text-gray-600'>
                <svg xmlns='http://www.w3.org/2000/svg' class='w-6 h-6' viewBox='0 0 24 24'
                  style='fill: rgba(0, 0, 0, 1);transform: ;msFilter:;'>
                  <path
                    d='M12 4.998c-1.836 0-3.356.389-4.617.971L3.707 2.293 2.293 3.707l3.315 3.316c-2.613 1.952-3.543 4.618-3.557 4.66l-.105.316.105.316C2.073 12.382 4.367 19 12 19c1.835 0 3.354-.389 4.615-.971l3.678 3.678 1.414-1.414-3.317-3.317c2.614-1.952 3.545-4.618 3.559-4.66l.105-.316-.105-.316c-.022-.068-2.316-6.686-9.949-6.686zM4.074 12c.103-.236.274-.586.521-.989l5.867 5.867C6.249 16.23 4.523 13.035 4.074 12zm9.247 4.907-7.48-7.481a8.138 8.138 0 0 1 1.188-.982l8.055 8.054a8.835 8.835 0 0 1-1.763.409zm3.648-1.352-1.541-1.541c.354-.596.572-1.28.572-2.015 0-.474-.099-.924-.255-1.349A.983.983 0 0 1 15 11a1 1 0 0 1-1-1c0-.439.288-.802.682-.936A3.97 3.97 0 0 0 12 7.999c-.735 0-1.419.218-2.015.572l-1.07-1.07A9.292 9.292 0 0 1 12 6.998c5.351 0 7.425 3.847 7.926 5a8.573 8.573 0 0 1-2.957 3.557z'>
                  </path>
                </svg>
              </button>
            </div>
          </div>
          {{#if fieldErrors.confirmPassword}}
          {{#each fieldErrors.confirmPassword}}
          <p class="text-sm text-red-500">{{this}}</p>
          {{/each}}
          {{/if}}
        </div>

        <div class='block mt-4'>
          <label for='remember_me' class='flex items-center'>
            <input type='checkbox' id='remember_me' name='remember' />
            <span class='ms-2 text-sm text-gray-600 leading-none'>Remember Me</span>
          </label>
        </div>

        <p class="mt-4 text-sm text-gray-600">Already have an account? Go to <a href="/auth/login"
            class="hover:underline text-sm text-gray-600 hover:text-gray-900">login.</a>
        </p>

        <div class='flex items-center justify-end mt-1'>
          <a class='hover:underline text-sm text-gray-600 hover:text-gray-900' href='/auth/forgot-password'>
            Forgot your password?
          </a>
          <button
            class='ms-4 inline-flex items-center px-4 py-2 bg-skin-primary border border-transparent rounded-md font-semibold text-xs text-white uppercase tracking-widest hover:bg-skin-primary/80 focus:bg-skin-primary/80 active:bg-skin-primary/80 focus:outline-none focus:ring-2 focus:ring-skin-primary focus:ring-offset-2 transition ease-in-out duration-150'>
            REGISTER
          </button>
        </div>

      </form>
    </div>
  </div>
</div>

{{#section "script"}}
<script>
  function togglePassword(target) {
    const input = document.getElementById(target);
    const type = input.getAttribute("type") === "password" ? "text" : "password";
    input.setAttribute("type", type);
  }

  const btn = document.getElementById("show_password_btn");
  const btn2 = document.getElementById("show_confirm_password_btn");

  btn.addEventListener("click", function () {
    togglePassword("password")
  });
  btn2.addEventListener("click", function () {
    togglePassword("confirm_password")
  });
</script>
{{/section}}