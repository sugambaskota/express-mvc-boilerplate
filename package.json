{
  "name": "express-mvc-boilerplate",
  "version": "1.0.0",
  "description": "",
  "author": "Sugam Baskota",
  "license": "UNLICENSED",
  "type": "commonjs",
  "scripts": {
    "css": "tailwindcss -i ./public/css/in.css -o ./public/css/out.css --minify",
    "build": "rimraf ./dist && tsc && tsc-alias && npm run css",
    "dev": "concurrently \"nodemon --watch ./src --exec ts-node --files ./src/main.ts\" \"npm run css -- --watch\"",
    "start": "npm run build && node ./dist/main.js",
    "typeorm": "typeorm-ts-node-commonjs",
    "typeorm:run-migration": "npm run typeorm -- migration:run -d ./src/data-source.ts",
    "typeorm:generate-migration": "cross-var npm run typeorm -- migration:generate -d ./src/data-source.ts ./src/migrations/$npm_config_name --pretty",
    "typeorm:create-migration": "cross-var npm run typeorm -- migration:create ./src/migrations/$npm_config_name",
    "typeorm:revert-migration": "npm run typeorm -- migration:revert -d ./src/data-source.ts",
    "typeorm:sync-schema": "npm run typeorm -- schema:sync -d ./src/data-source.ts"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "connect-typeorm": "^2.0.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cross-var": "^1.1.0",
    "csrf-csrf": "^3.0.4",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-handlebars": "^7.1.2",
    "express-session": "^1.18.0",
    "fs-extra": "^11.2.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.9.6",
    "nodemailer": "^6.9.13",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.2.2",
    "session-file-store": "^1.5.0",
    "sharp": "^0.33.3",
    "slugify": "^1.6.6",
    "typeorm": "^0.3.20",
    "uuid": "^9.0.1",
    "zod": "^3.22.5"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/fs-extra": "^11.0.4",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.12.7",
    "@types/nodemailer": "^6.4.14",
    "@types/passport": "^1.0.16",
    "@types/passport-local": "^1.0.38",
    "@types/session-file-store": "^1.2.5",
    "@types/uuid": "^9.0.8",
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.4.3",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5"
  }
}
